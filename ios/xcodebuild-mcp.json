{
  "name": "ColoringBook iOS Build",
  "version": "1.0.0",
  "description": "XcodeBuildMCP configuration for ColoringBook iOS app",
  "project": {
    "path": "ios/ColoringBook",
    "scheme": "ColoringBook",
    "configuration": "Debug"
  },
  "targets": [
    {
      "name": "ColoringBook",
      "type": "application",
      "platform": "iOS",
      "deploymentTarget": "16.0"
    },
    {
      "name": "ColoringBookTests",
      "type": "unit-test",
      "platform": "iOS"
    },
    {
      "name": "ColoringBookUITests",
      "type": "ui-test",
      "platform": "iOS"
    }
  ],
  "build": {
    "commands": {
      "clean": "xcodebuild clean -scheme ColoringBook",
      "build": "xcodebuild build -scheme ColoringBook -destination 'platform=iOS Simulator,name=iPhone 15 Pro'",
      "test": "xcodebuild test -scheme ColoringBook -destination 'platform=iOS Simulator,name=iPhone 15 Pro'",
      "test:unit": "xcodebuild test -scheme ColoringBook -destination 'platform=iOS Simulator,name=iPhone 15 Pro' -only-testing:ColoringBookTests",
      "test:ui": "xcodebuild test -scheme ColoringBook -destination 'platform=iOS Simulator,name=iPhone 15 Pro' -only-testing:ColoringBookUITests",
      "build:ipad": "xcodebuild build -scheme ColoringBook -destination 'platform=iOS Simulator,name=iPad Pro (12.9-inch)'",
      "archive": "xcodebuild archive -scheme ColoringBook -archivePath ./build/ColoringBook.xcarchive"
    }
  },
  "test": {
    "simulators": [
      {
        "name": "iPhone 15 Pro",
        "os": "iOS 17.0"
      },
      {
        "name": "iPhone SE (3rd generation)",
        "os": "iOS 17.0"
      },
      {
        "name": "iPad Pro (12.9-inch)",
        "os": "iOS 17.0"
      }
    ]
  },
  "ci": {
    "enabled": true,
    "workflow": ".github/workflows/ios-ci.yml",
    "triggers": [
      "push:main",
      "push:develop",
      "pull_request"
    ]
  }
}
